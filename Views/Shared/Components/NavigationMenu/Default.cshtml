@{
}
@model IEnumerable<string>
    <!--Creates the Home nav link-->
    <li class="nav-item">
        <a class="nav-link text-dark" asp-action="Index" asp-controller="Home" asp-route-category="">Home</a>
    </li>
    @foreach (string category in Model)
    {
        <!--Creates other nav links-->
        <li class="nav-item">
            <a asp-action="Index"
               class="nav-link @(category == ViewBag.SelectedCategory ? "text-light bg-dark" :
        "")"
               asp-controller="Home" asp-route-category="@category"
               asp-route-pageNum="1">@category</a>
        </li>
    }