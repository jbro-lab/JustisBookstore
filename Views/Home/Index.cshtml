@{
    ViewData["Title"] = "Home Page";
    
}
@model BookListViewModel

<div class="text-center">
    <h1 class="display-4">Welcome to Justis' Bookstore</h1>
</div>
<div class="nav" page-model="@Model.PagingInfo" page-action="Index"></div>
<div class="container ">
    <div class="card">
        @foreach (Book book in Model.Books)//displays all  Books
        {
        <h3 class="card-header">@book.title <br /></h3>

        <p class="card-body">
            ISBN: @book.ISBN <br />
            Author: @book.authorFirstName @book.authorMiddleName @book.authorLastName <br />
            Publisher: @book.publisher <br /> Classification: @book.classification <br />
            Category: @book.category <br /> Price: $@book.price
        </p>


        }
    </div>
</div>
<div class="nav" page-model="@Model.PagingInfo" page-action="Index"></div>