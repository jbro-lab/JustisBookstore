@{
    ViewData["Title"] = "Home Page";

}
@model BookListViewModel

<div class="text-center">
    <h1 class="display-4">Welcome to Justis' Bookstore</h1>
</div>
<div page-model="@Model.PagingInfo" page-action="Index"   page-classes-enabled="true"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary"
     page-class="btn"
     class="btn-group pull-right m-1"></div>
<div class="container ">

    @foreach (Book book in Model.Books)//displays all  Books
    {
        <partial name="BookSummary" model="book"/>
    }

</div>
<div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary"
     page-class="btn"
     page-url-category="@Model.CurrentCategory"
     class="btn-group pull-right m-1"></div>